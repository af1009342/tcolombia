<%- layout('layouts/main') %>
<div class="row">
<div class="col-md-4 offset-md-4">
  <div class="card mt-4 text-center">
    <div class="car-header">
      <h3>SignUp - Registrar Usuario</h3>
    </div>
    <div class="card-body">
        <form action="/signup" method="POST">
          <div class="form-group">
          <input type="email" name="email" placeholder="Email" class="form-control">
        </div>
          <div class="form-group">
          <input type="password" name="password" placeholder="Password" class="form-control">
        </div>
      </div>
<!--         <div class="form-group">
        <input type="text" id="role" name="role" placeholder="role" class="form-control">
       </div> -->
        <select name="role" id="selectionrole" class="form-control">
          <option value="admin">Administrador</option>
          <option value="coord">Coordinador</option>
          <option value="oper">Operador</option>
          <option value="motor" selected>Motorista</option>
        </select>

          <button type="submit" class="btn btn-primary mt-4 btn-block">
              SignUp
          </button>
        </form>       
      </div>
  </div>
</div>
</div>
<script>
  document.getElementById("selectionrole").onchange = function() {
    document.getElementById("role").value = this.value;
  };


  </script>