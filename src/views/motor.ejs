<%- layout('layouts/main') %>

<h1 class="mt-4">pagina principal motoristas <%= tasko %></h1>

<div class="row">
    
                 <div class="col-md-12 mt-4">
        <table
        id="tablex"
        data-toggle="tablex"
        data-url="/data/motor/<%= tasko %>"
        data-toolbar="#toolbar"
        data-search="true"
        data-show-refresh="true"
        data-show-toggle="true"
        data-show-fullscreen="true"
        data-show-columns="true"
        data-detail-view="true"
        data-show-export="true"
        data-detail-formatter="detailFormatter"
        data-minimum-count-columns="2"
        data-show-pagination-switch="true"
        data-pagination="true"
        data-id-field="id"
        data-page-list="[10, 25, 50, 100, ALL]"
        data-show-footer="true"
        data-side-pagination="server"
        data-response-handler="responseHandler"        
        class="table table-bordered table-hover">
     <thead class="thead-dark">
          <tr>
            <th data-field="_id">_id</th>
            <th data-field="pasajero">pasajero</th>
            <th data-field="direccion">direccion</th>
            <th data-field="notifico">notifico</th>
            <th data-field="asignado">asignado</th>
          </tr>
        </thead>
      </table>


      <div id="toolbar">
        <button id="remove" class="btn btn-danger" disabled>
          <i class="glyphicon glyphicon-remove"></i> Delete
        </button>
      </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
      <script>
         // conenction
         var $table = $('#tablex');
        var $remove = $('#remove');

         let socket = io();

        socket.on('oper:motor', function(data) {
          console.log(data);
          $table.bootstrapTable('refresh');
        });

        
        var selections = []
      
        function getIdSelections() {
          return $.map($table.bootstrapTable('getSelections'), function (row) {
            return row.id
          })
        }
      
        function responseHandler(res) {
          $.each(res.rows, function (i, row) {
            row.state = $.inArray(row.id, selections) !== -1
          })
          return res
        }
      
        function detailFormatter(index, row) {
          var html = []
          $.each(row, function (key, value) {
            html.push('<p><b>' + key + ':</b> ' + value + '</p>')
          })
          return html.join('')
        }
      
        function operateFormatter(value, row, index) {
          return [
            '<a class="like" href="javascript:void(0)" title="Like">',            
            '<i class="fa fa-check" aria-hidden="true"></i>',
            '</a>'       
            
          ].join('')
        }
      
        window.operateEvents = {
          'click .like': function (e, value, row, index) {
           
            row['asignado'] = '<%= tasko %>';
            //alert('You click like action, row: ' + JSON.stringify(row)+" row id: "+row._id)
            $.ajax({
                url: "/oper/edit/"+row._id,
                type: "PUT",
                dataType: "json",
                data: JSON.stringify(row),
                contentType: "application/json",
                cache: false,
                timeout: 5000,
                complete: function() {
                  //called when complete
                  console.log('process complete');
                },
                success: function(data) {
                  console.log(data);
                  console.log('process sucess');
                  $table.bootstrapTable('refresh');                
                  
                  socket.emit('coord:oper', {
                  message: "actualiza bandeja de entrada",
                  username: "cualquier user"
                });
                  socket.emit('oper:motor', {
                  message: "actualiza bandeja de entrada",
                  username: "cualquier user"
                });
                  
               },
                error: function(data) {
                  console.log('process error');
                  //console.log(data.responseText);
                  alert(data.responseText);

                },
              });

          },
          'click .remove': function (e, value, row, index) {
            $table.bootstrapTable('remove', {
              field: 'id',
              values: [row.id]
            })
          }
        }
      
        function totalTextFormatter(data) {
          return 'Total'
        }
      
        function totalNameFormatter(data) {
          return data.length
        }
      
        function totalPriceFormatter(data) {
          var field = this.field
          return '$' + data.map(function (row) {
            return +row[field].substring(1)
          }).reduce(function (sum, i) {
            return sum + i
          }, 0)
        }
      
        function initTable() {
          $table.bootstrapTable('destroy').bootstrapTable({
            height: 550,
            locale: 'es-ES',//$('#locale').val(),
            columns: [
              [{
                field: 'state',
                checkbox: true,
                rowspan: 2,
                align: 'center',
                valign: 'middle'
              }, {
                title: 'Item ID',
                field: '_id',
                rowspan: 2,
                align: 'center',
                valign: 'middle',
                sortable: true
                //,
                //footerFormatter: totalTextFormatter
              }, {
                title: 'Item Detail',
                colspan: 3,
                align: 'center'
              }],
              [{
                field: 'pasajero',
                title: 'Item Name',
                sortable: true,
                //footerFormatter: totalNameFormatter,
                align: 'center'
              }, {
                field: 'direccion',
                title: 'Item Price',
                sortable: true,
                align: 'center',
                //footerFormatter: totalPriceFormatter
              }, {
                field: 'operate',
                title: 'Item Operate',
                align: 'center',
                events: window.operateEvents,
                formatter: operateFormatter
              }, {
                field: 'notifico',
                title: 'notificados',
                sortable: true,
                align: 'center',
                //footerFormatter: totalPriceFormatter
              }, {
                field: 'asignado',
                title: 'asignados',
                sortable: true,
                align: 'center',
                //footerFormatter: totalPriceFormatter
              }]
            ]
          })
          $table.on('check.bs.table uncheck.bs.table ' +
            'check-all.bs.table uncheck-all.bs.table',
          function () {
            $remove.prop('disabled', !$table.bootstrapTable('getSelections').length)
      
            // save your data, here just save the current page
            selections = getIdSelections()
            // push or splice the selections if you want to save all data selections
          })
          $table.on('all.bs.table', function (e, name, args) {
            console.log(name, args)
          })
          $remove.click(function () {
            var ids = getIdSelections()
            $table.bootstrapTable('remove', {
              field: 'id',
              values: ids
            })
            $remove.prop('disabled', true)
          })
        }
      
        $(function() {
          initTable()


        })



       

         
      </script>




